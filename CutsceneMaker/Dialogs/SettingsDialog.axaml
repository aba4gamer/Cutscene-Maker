<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Width="500" Height="200"
		x:Class="CutsceneMaker.SettingsDialog"
		x:Name="SettingsDialogWindow"
		Title="Settings"
		Background="#3a3a3a"
		WindowStartupLocation="CenterOwner"
		CanResize="False">
	<Grid Margin="6" RowDefinitions="1*, *">
		<TextBlock Text="Base Game Path" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Grid.Row="0"/>
		<Grid ColumnDefinitions="*, 78" HorizontalAlignment="Stretch" VerticalAlignment="Center">
			<TextBox Grid.Column="0" Name="BaseGamePathBox" HorizontalAlignment="Stretch" VerticalAlignment="Center" ToolTip.Tip="The program will use ObjNameTable.arc as a reference" Watermark="C:\I\am\a\cool\base\path\SMG2\DATA\files\"/>
			<Button Grid.Column="1" Name="BrowseBaseGamePathBtn" Content="Browse..." HorizontalAlignment="Right" VerticalAlignment="Center" Width="75" Click="OnBrowse"/>
		</Grid>
		<TextBlock Grid.Row="1" Name="PathValidatorBlock"/>
			<Border Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Padding="5" BorderThickness="0, 1, 0, 0" BorderBrush="#888">
			<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
				<Button Name="CancelBtn" Click="OnCancel" Margin="0,0,5,0">Cancel</Button>
				<Button Name="ApplyBtn" Click="OnApply">Apply</Button>
			</StackPanel>
		</Border>
	</Grid>
</Window>
