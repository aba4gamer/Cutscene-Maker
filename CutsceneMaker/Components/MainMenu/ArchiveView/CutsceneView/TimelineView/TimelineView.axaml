<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:views="using:CutsceneMakerUI"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="CutsceneMakerUI.TimelineView">
	<StackPanel>
		<StackPanel Spacing="5" Margin="3">
			<StackPanel Orientation="Horizontal" Spacing="3">
				<Label VerticalAlignment="Center">SubPart:</Label>
				<ComboBox Name="SubPartComboBox" ToolTip.Tip="Select a SubPart of the selected part"></ComboBox>
			</StackPanel>
		</StackPanel>
		<DockPanel>
			<views:TimelineDeco />
			<ScrollViewer HorizontalScrollBarVisibility="Auto">
				<StackPanel>
					<DockPanel Name="MainTimelineSteps" Height="20" HorizontalAlignment="Stretch" Background="#112"></DockPanel>
					<Border BorderThickness="0, 0, 0, 1" BorderBrush="White">
						<DockPanel Name="MainTimeline" Background="#223" Height="60" HorizontalAlignment="Stretch"></DockPanel>
					</Border>

					<DockPanel Name="SubTimelineSteps" Height="20" HorizontalAlignment="Stretch" Background="#112"></DockPanel>
					<DockPanel Name="SubTimeline" Background="#191929" Height="60" HorizontalAlignment="Stretch"></DockPanel>
				</StackPanel>
			</ScrollViewer>
		</DockPanel>
	</StackPanel>
</UserControl>
