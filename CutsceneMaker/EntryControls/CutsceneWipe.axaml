<UserControl xmlns="https://github.com/avaloniaui"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			x:Class="CutsceneMakerUI.CutsceneWipe">
	<Grid RowDefinitions="Auto,40,Auto,Auto,Auto" ColumnDefinitions="Auto,150">

		<TextBlock Text="Enabled?" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
		<CheckBox Name="IsWipeEnabled" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>

		<!--TODO: Change to a list format, anyone wants to write japanese characters-->
		<!-- Yeah, will do that in another PR -->
		<TextBlock Text="WipeName" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
		<TextBox Name="WipeName" Grid.Row="2" Grid.Column="1" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>

		<TextBlock Text="WipeType" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
		<NumericUpDown Name="WipeType" Grid.Row="3" Grid.Column="1" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" ParsingNumberStyle="Integer" Increment="1"/>

		<TextBlock Text="WipeFrame" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
		<NumericUpDown Name="WipeFrame" Grid.Row="4" Grid.Column="1" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" ParsingNumberStyle="Integer" Increment="1"/>
	</Grid>
</UserControl>
