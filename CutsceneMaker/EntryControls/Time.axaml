<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CutsceneMaker.Time">
	<Grid RowDefinitions="Auto,40,Auto,Auto,Auto" ColumnDefinitions="Auto,150">

		<TextBlock Text="TotalStep" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
		<NumericUpDown x:Name="TotalStep" Grid.Row="0" Grid.Column="1" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" ParsingNumberStyle="Integer" Increment="1" Minimum="1"/>

		<TextBlock Text="SuspendFlag" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
		<CheckBox x:Name="SuspendFlag" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>

		<TextBlock Text="WaitUserInputFlag" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
		<CheckBox x:Name="WaitUserInputFlag" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>
	</Grid>
</UserControl>
